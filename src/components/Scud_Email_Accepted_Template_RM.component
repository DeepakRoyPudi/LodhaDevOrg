<html>
<apex:variable value="{!0}" var="Percentage"/>
<apex:variable value="{!0}" var="CurrentTotalAmount"/>
<apex:variable value="{!0}" var="RequestedTotalAmount"/>

<style type="text/css">
  table td{padding:3px;}
