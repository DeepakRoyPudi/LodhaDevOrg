<script>
    //Function to clear L3
    function clearl3(){
        var l3B = document.getElementById('pageid:mainform:blkParentCase:Request_Details:sectionL3B:secItemL3B:RequestForL3b_selected');
        var l3A = document.getElementById('pageid:mainform:blkParentCase:Request_Details:sectionL3A:secItemL3A:RequestForL3a_selected');

        if(l3B !== null)
        {   
            var l3Blenght = l3B.length;
            for (var i = 0; i < l3Blenght; i++) 
                l3B.options.remove(0);
         }
            
        if(l3A !== null)
        {
            var l3Alenght = l3A.length;
            for (var i = 0; i < l3Alenght; i++) 
                l3A.options.remove(0);
        }
        callonchange();
    }
    
    //Added by Anupam: 
    var L2Id;
    function sendCombinationB()
    {
        var select = document.getElementById('pageid:mainform:blkParentCase:Request_Details:sectionL3B:secItemL3B:RequestForL3b_selected');
        var selected = [ ];
        for (var i = 0; i < select.length; i++) 
          selected.push(select.options[i].label);
        
        var l3BValues = "\'" + selected.join("\',\'") + "\'";
        callOnchangeB(document.getElementById(L2Id).value, l3BValues);
    }
    
    function sendCombinationA()
    {
        var select = document.getElementById('pageid:mainform:blkParentCase:Request_Details:sectionL3A:secItemL3A:RequestForL3a_selected');
        var selected = [ ];
        for (var i = 0; i < select.length; i++)
          selected.push(select.options[i].label);
        
        var l3AValues = "\'" + selected.join("\',\'") + "\'";
        callOnchangeA(document.getElementById(L2Id).value, l3AValues);
    }
</script>

