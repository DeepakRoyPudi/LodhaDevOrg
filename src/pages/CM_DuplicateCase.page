                <apex:commandButton value="Cancel" onclick="Window.Top.close();"/> 
            </apex:outputPanel>
            -->
        </apex:pageBlock>
    </apex:form>  
    
    <script>
        function close()
        {
            myWindow.close();
        }
    </script>
</apex:page>